{% extends 'open/open.html.twig' %}

{% block title %}Doble RR | Contacto{% endblock %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="/assets/themes/beauty/styles/contact.css">
    <link rel="stylesheet" type="text/css" href="/assets/themes/beauty/styles/contact_responsive.css">
{% endblock %}

{% block body %}
<div class="home">
    <div class="parallax_background" data-image-src="/assets/themes/beauty/images/contact.jpg"></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col-xl-8">
                    <div class="section_title_container">
                        <div class="section_title"><h1>Aquí<span> te esperamos</span></h1></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact -->

<div class="contact">

    <!-- Google Map -->
    <div class="map">
        <div id="google_map" class="google_map">
            <div class="map_container">
                <div id="map"></div>
            </div>
        </div>
    </div>

    <div class="contact_overlay">
        <div class="contact_overlay_content d-flex flex-column align-items-center justify-content-center">
            <!-- Logo -->
            <div class="logo">
                <a href="#">
                    <div>Doble <span>RR</span></div>
                    <div>peluquería</div>
                </a>
            </div>
            <div class="contact_list">
                <ul>
                    <li class="text-center">
                        <div><span><img src="/assets/themes/beauty/images/placeholder.svg" alt=""></span>Calle Clara del Rey 57</div>
                    </li>
                    <li class="text-center">
                        <div><span><img src="/assets/themes/beauty/images/phone-call.svg" alt=""></span>+34 91 455 74 43</div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="footer">
    <div class="parallax_background" data-image-src="/assets/themes/beauty/images/footer.jpg"></div>
    <div class="footer_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="section_title_container">
                        <div class="section_title"><h1 style="color:white;">Formulario</h1></div>
                    </div>
                </div>
            </div>
            <div class="row footer_row">
                <div class="col-lg-4 footer_col">
                    <div class="contact_info">
                        <div class="footer_title">Contact Info</div>
                        <div class="contact_info_list">
                            <ul>
                                <li class="d-flex flex-row align-items-start justify-content-start">
                                    <div><div class="contact_info_icon"><img src="/assets/themes/beauty/images/placeholder.svg" alt="https://www.flaticon.com/authors/freepik"></div></div>
                                    <div class="contact_info_content">4127 Raoul Wallenber4127 Raoul Wallen berg Place</div>
                                </li>
                                <li class="d-flex flex-row align-items-center justify-content-start">
                                    <div><div class="contact_info_icon"><img src="/assets/themes/beauty/images/phone-call.svg" alt="https://www.flaticon.com/authors/freepik"></div></div>
                                    <div class="contact_info_content">203-808-8613</div>
                                </li>
                                <li class="d-flex flex-row align-items-center justify-content-start">
                                    <div><div class="contact_info_icon"><img src="/assets/themes/beauty/images/message.svg" alt="https://www.flaticon.com/authors/freepik"></div></div>
                                    <div class="contact_info_content">milothemes@gmail.com</div>
                                </li>
                            </ul>
                        </div>
                        <div class="social">
                            <ul class="d-flex flex-row align-items-center justify-content-start">
                                <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-behance" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="footer_title">Leave a comment</div>
                    <div class="contact_form_container">
                        <form action="#" id="contact_form" class="contact_form">
                            <div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <input type="text" placeholder="Name" class="contact_input" required="required">
                                    </div>
                                    <div class="col-lg-6">
                                        <input type="email" placeholder="E-mail" class="contact_input" required="required">
                                    </div>
                                </div>
                            </div>
                            <div><input type="text" placeholder="Subject" class="contact_input"></div>
                            <div><textarea class="contact_input contact_textarea" placeholder="Message" required="required"></textarea></div>
                            <button class="contact_form_button">send message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyDimWax6oDetilbXKqdmmoIIxHREyJ4aY0"></script>
    <script src="/assets/themes/beauty/js/contact.js"></script>
{% endblock %}